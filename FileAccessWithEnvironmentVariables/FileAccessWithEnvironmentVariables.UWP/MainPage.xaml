<Page
    x:Class="FileAccessWithEnvironmentVariables.UWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FileAccessWithEnvironmentVariables.UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="167*"/>
            <RowDefinition Height="244*"/>
            <RowDefinition Height="589*"/>
        </Grid.RowDefinitions>
        <Button Content="Load file content from the environment variable path"
                Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Background="#330999F0" Click="Button_Click"/>
        <TextBlock Text="File content:" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1"/>
        <TextBlock x:Name="FileContentTextBlock" Text="File content..." HorizontalAlignment="Stretch" Grid.Row="2" Margin="30"/>
    </Grid>
</Page>
